<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ExceptionSymbolBinding">

        <variable
            name="addItemActivityexception"
            type="com.moverbol.views.activities.storageinventory.AddItemActivity" />
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet1"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bottomsheet_first_button"
                android:layout_marginStart="@dimen/bottomsheet_first_button"
                android:layout_marginTop="16dp"
                android:text="Exception Symbols"
                android:textColor="@color/text_black"
                android:textSize="@dimen/textsize_20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <CheckBox
                android:id="@+id/btn_arm"
                style="@style/BottomSheetButton"
                android:layout_marginTop="24dp"
                android:onClick="openExceptionSymbol"
                android:text="@string/bent"
                app:layout_constraintStart_toStartOf="@id/txt_location"
                app:layout_constraintTop_toBottomOf="@id/txt_location" />

            <CheckBox

                android:id="@+id/button5"
                style="@style/BottomSheetButton"
                android:layout_marginLeft="@dimen/bottomsheet_second_button"
                android:layout_marginStart="@dimen/bottomsheet_second_button"
                android:onClick="openExceptionSymbol"
                android:text="@string/broken"
                app:layout_constraintBottom_toBottomOf="@+id/btn_arm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_arm" />

            <CheckBox
                android:id="@+id/button6"
                style="@style/BottomSheetButton"
                android:layout_marginLeft="@dimen/bottomsheet_third_button"
                android:layout_marginStart="@dimen/bottomsheet_third_button"
                android:onClick="openExceptionSymbol"
                android:text="@string/burned"
                app:layout_constraintBottom_toBottomOf="@+id/button5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button5" />

            <CheckBox
                android:id="@+id/button7"
                style="@style/BottomSheetButton"
                android:layout_marginLeft="@dimen/bottomsheet_fourth_button"
                android:layout_marginStart="@dimen/bottomsheet_fourth_button"
                android:onClick="openExceptionSymbol"
                android:text="@string/chipped"
                app:layout_constraintBottom_toBottomOf="@+id/button6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button6" />

            <CheckBox
                android:id="@+id/button8"
                style="@style/BottomSheetButton"
                android:layout_marginTop="16dp"
                android:onClick="openExceptionSymbol"
                android:text="@string/unknown"
                app:layout_constraintEnd_toEndOf="@+id/btn_arm"
                app:layout_constraintStart_toStartOf="@+id/btn_arm"
                app:layout_constraintTop_toBottomOf="@+id/btn_arm" />

            <CheckBox
                android:id="@+id/button9"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/dented"
                app:layout_constraintBottom_toBottomOf="@+id/button8"
                app:layout_constraintEnd_toEndOf="@+id/button5"
                app:layout_constraintStart_toStartOf="@+id/button5"
                app:layout_constraintTop_toTopOf="@+id/button8" />

            <CheckBox
                android:id="@+id/button10"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/faded"
                app:layout_constraintBottom_toBottomOf="@+id/button9"
                app:layout_constraintEnd_toEndOf="@+id/button6"
                app:layout_constraintStart_toStartOf="@+id/button6"
                app:layout_constraintTop_toTopOf="@+id/button9" />

            <CheckBox
                android:id="@+id/button11"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/gouged"
                app:layout_constraintBottom_toBottomOf="@+id/button10"
                app:layout_constraintEnd_toEndOf="@+id/button7"
                app:layout_constraintStart_toStartOf="@+id/button7"
                app:layout_constraintTop_toTopOf="@+id/button10" />

            <CheckBox
                android:id="@+id/btn_veener"
                style="@style/BottomSheetButton"
                android:layout_marginTop="16dp"
                android:onClick="openExceptionSymbol"
                android:text="@string/loose"
                app:layout_constraintEnd_toEndOf="@+id/btn_arm"
                app:layout_constraintStart_toStartOf="@id/btn_arm"
                app:layout_constraintTop_toBottomOf="@id/button8" />

            <CheckBox
                android:id="@+id/btn_edge"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/edge"
                app:layout_constraintBottom_toBottomOf="@+id/btn_veener"
                app:layout_constraintEnd_toEndOf="@+id/button5"
                app:layout_constraintStart_toStartOf="@+id/button5"
                app:layout_constraintTop_toTopOf="@id/btn_veener" />

            <CheckBox
                android:id="@+id/btn_center"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/missing"
                app:layout_constraintBottom_toBottomOf="@+id/btn_veener"
                app:layout_constraintEnd_toEndOf="@+id/button6"
                app:layout_constraintStart_toStartOf="@+id/button6"
                app:layout_constraintTop_toTopOf="@id/btn_veener" />

            <CheckBox
                android:id="@+id/btn_inside"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/mildew"
                app:layout_constraintBottom_toBottomOf="@+id/btn_veener"
                app:layout_constraintEnd_toEndOf="@+id/button11"
                app:layout_constraintStart_toStartOf="@+id/button11"
                app:layout_constraintTop_toTopOf="@id/btn_veener" />

            <CheckBox
                android:id="@+id/btn_seat"
                style="@style/BottomSheetButton"
                android:layout_marginTop="16dp"
                android:onClick="openExceptionSymbol"
                android:text="@string/motheaten"
                app:layout_constraintEnd_toEndOf="@+id/btn_arm"
                app:layout_constraintStart_toStartOf="@id/btn_arm"
                app:layout_constraintTop_toBottomOf="@id/btn_veener" />

            <CheckBox
                android:id="@+id/btn_drawer"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/peeling"
                app:layout_constraintBottom_toBottomOf="@+id/btn_seat"
                app:layout_constraintEnd_toEndOf="@+id/button5"
                app:layout_constraintStart_toStartOf="@+id/button5"
                app:layout_constraintTop_toTopOf="@id/btn_seat" />

            <CheckBox
                android:id="@+id/btn_door"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/rubbed"
                app:layout_constraintBottom_toBottomOf="@+id/btn_seat"
                app:layout_constraintEnd_toEndOf="@+id/button6"
                app:layout_constraintStart_toStartOf="@+id/button6"
                app:layout_constraintTop_toTopOf="@id/btn_seat" />

            <CheckBox
                android:id="@+id/btn_shelf"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/rusted"
                app:layout_constraintBottom_toBottomOf="@+id/btn_seat"
                app:layout_constraintEnd_toEndOf="@+id/button11"
                app:layout_constraintStart_toStartOf="@+id/button11"
                app:layout_constraintTop_toTopOf="@id/btn_seat" />

            <CheckBox
                android:id="@+id/btn_hardware"
                style="@style/BottomSheetButton"
                android:layout_marginTop="16dp"
                android:onClick="openExceptionSymbol"
                android:text="@string/scratched"
                app:layout_constraintEnd_toEndOf="@+id/btn_arm"
                app:layout_constraintStart_toStartOf="@id/btn_arm"
                app:layout_constraintTop_toBottomOf="@id/btn_seat" />

            <CheckBox
                android:id="@+id/btn_short"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/short_sheet"
                app:layout_constraintBottom_toBottomOf="@+id/btn_hardware"
                app:layout_constraintEnd_toEndOf="@+id/button5"
                app:layout_constraintStart_toStartOf="@+id/button5"
                app:layout_constraintTop_toTopOf="@id/btn_hardware" />

            <CheckBox
                android:id="@+id/btn_soiled"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/soiled"
                app:layout_constraintBottom_toBottomOf="@+id/btn_hardware"
                app:layout_constraintEnd_toEndOf="@+id/button6"
                app:layout_constraintStart_toStartOf="@+id/button6"
                app:layout_constraintTop_toTopOf="@id/btn_hardware" />

            <CheckBox
                android:id="@+id/btn_stained"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/stained"
                app:layout_constraintBottom_toBottomOf="@+id/btn_hardware"
                app:layout_constraintEnd_toEndOf="@+id/button11"
                app:layout_constraintStart_toStartOf="@+id/button11"
                app:layout_constraintTop_toTopOf="@id/btn_hardware" />

            <CheckBox
                android:id="@+id/btn_streched"
                style="@style/BottomSheetButton"
                android:layout_marginTop="16dp"
                android:onClick="openExceptionSymbol"
                android:text="@string/streched"
                app:layout_constraintEnd_toEndOf="@+id/btn_arm"
                app:layout_constraintStart_toStartOf="@id/btn_arm"
                app:layout_constraintTop_toBottomOf="@id/btn_hardware" />

            <CheckBox
                android:id="@+id/btn_torn"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/torn"
                app:layout_constraintBottom_toBottomOf="@+id/btn_streched"
                app:layout_constraintEnd_toEndOf="@+id/button5"
                app:layout_constraintStart_toStartOf="@+id/button5"
                app:layout_constraintTop_toTopOf="@id/btn_streched" />

            <CheckBox
                android:id="@+id/btn_worn"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/badly_worn"
                app:layout_constraintBottom_toBottomOf="@+id/btn_streched"
                app:layout_constraintEnd_toEndOf="@+id/button6"
                app:layout_constraintStart_toStartOf="@+id/button6"
                app:layout_constraintTop_toTopOf="@id/btn_streched" />

            <CheckBox
                android:id="@+id/btn_cracked"
                style="@style/BottomSheetButton"
                android:onClick="openExceptionSymbol"
                android:text="@string/cracked"
                app:layout_constraintBottom_toBottomOf="@+id/btn_streched"
                app:layout_constraintEnd_toEndOf="@+id/button11"
                app:layout_constraintStart_toStartOf="@+id/button11"
                app:layout_constraintTop_toTopOf="@id/btn_streched" />

            <TextView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:onClick="@{addItemActivityexception.onSelectingExceptionSymbol}"
                android:text="@string/done"
                android:textColor="@color/selector_textview_sheet"
                android:textSize="@dimen/textsize_20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cancel" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:onClick="@{addItemActivityexception.cancelExceptionBottomSheet}"
                android:text="@string/cancel"
                android:textColor="@color/selector_textview_sheet"
                android:textSize="@dimen/textsize_20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>
</layout>
